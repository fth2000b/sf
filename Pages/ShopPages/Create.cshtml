@page
@model ShopFinder.Pages.ShopPages.MessageModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Shop.ShopName" class="control-label"></label>
                <input asp-for="Shop.ShopName" class="form-control" />
                <span asp-validation-for="Shop.ShopName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.ShopCatagoryID" class="control-label"></label>
                <select asp-for="Shop.ShopCatagoryID" class="form-control" asp-items="ViewBag.ShopCatagoryID"></select>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shop.IsOpen" /> @Html.DisplayNameFor(model => model.Shop.IsOpen)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Shop.ConatctPerson" class="control-label"></label>
                <input asp-for="Shop.ConatctPerson" class="form-control" />
                <span asp-validation-for="Shop.ConatctPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.CityID" class="control-label"></label>
                <select asp-for="Shop.CityID" class="form-control" asp-items="ViewBag.CityID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Shop.Address" class="control-label"></label>
                <input asp-for="Shop.Address" class="form-control" />
                <span asp-validation-for="Shop.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.Address2" class="control-label"></label>
                <input asp-for="Shop.Address2" class="form-control" />
                <span asp-validation-for="Shop.Address2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Shop.GPSLocation" class="control-label"></label>
                <input asp-for="Shop.GPSLocation" class="form-control" />
                <span asp-validation-for="Shop.GPSLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.ContactNo1" class="control-label"></label>
                <input asp-for="Shop.ContactNo1" class="form-control" value="@ViewData["ContactNo1"]"/>
                <span asp-validation-for="Shop.ContactNo1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.ContactNo2" class="control-label"></label>
                <input asp-for="Shop.ContactNo2" class="form-control" />
                <span asp-validation-for="Shop.ContactNo2" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shop.IsDiliveryAvilabel" /> @Html.DisplayNameFor(model => model.Shop.IsDiliveryAvilabel)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shop.IsCreditCardAccept" /> @Html.DisplayNameFor(model => model.Shop.IsCreditCardAccept)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shop.IsCreditCardAcceptOnDeliveryLocation" /> @Html.DisplayNameFor(model => model.Shop.IsCreditCardAcceptOnDeliveryLocation)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
